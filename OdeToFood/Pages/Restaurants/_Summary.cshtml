@using OdeToFood.Core
@model Restaurant

<panel class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span> Location : @Model.Location</span>
        <span> Cuisine : @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        
            <a asp-page="./Details"
               asp-route-restaurantId=@Model.Id><i class="glyphicon glyphicon-search"></i> Detail </a>
        
        
            <a asp-page="./Edit"
               asp-route-restaurantId=@Model.Id> Edit </a>
        
        
            <a asp-page="./Delete"
               asp-route-restaurantId=@Model.Id> Delete </a>
       
    </div>
</panel>